<!-- block text with image /blocks-->
<section class="d-flex">
    <div class="container py-0 g-0">
        <div class="row flex-lg-row-reverse ">
         
          <div class="col-12  col-md-8 order-last order-md-first">
            {% if block.title | length %}
            <h3 class="display-5 fw-bold text-body-emphasis lh-1 mb-3">{{block.title}}</h3>
            {% endif %}
            
              {% if block.body | length %}{{block.body}}{% endif %} 
              {% if block.entryLink | length %}
              <a href="{{block.entryLink.one().url}}" class="btn btn-primary btn-lg px-4 me-md-2" href="">Primary</a>
              {% endif %} 
            
          </div>
          <div class="col-12  col-md-4 order-first order-md-last pb-3">
            <img src="{{block.image.one().url}}" class="mt-2 shadow img-fluid " />
          </div>
        </div>
      </div>
    </section>  