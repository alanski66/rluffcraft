{% extends "_layouts/generic-page-layout.twig" %}


{% block content %}
{% include('_partials/header-shallow')%}


<section class="py-5 d-flex bg-community">
    <div class="container">
        <div class="">
            {% set entries = craft.entries.section('work').limit(null).all() %}
            {% for entry in entries %}
            {% if loop.index is even %}
            {% set oddclass = "even flex-sm-row-reverse" %}
            {% set quotealign = "text-start ps-5" %}
            {% set border = "border-5 border-start" %}
            {% set padding = "pe-lg-5" %}
            {% else %}
            {% set oddclass = "odd" %}
            {% set border = "border-5 border-end" %}
            {% set quotealign = "text-end pe-5" %}
            {% set padding = "ps-lg-5" %}

            {% endif %}
            <div class="col-12 col-lg-8 offset-lg-2 py-5">
                <h3 class="display-5 text-lg-center">Supporting Leaders</h3>
                <p class="lead">Rebecca provides one-on-one coaching for charity, social enterprise, and business leaders,
                    helping them create actionable strategies and navigate personal and professional growth.</p>
            </div>
            <div class="row d-flex align-items-center {{oddclass}} align-items-center  pb-5 border-bottom ">
                

                <div class="col-12 col-lg-6 d-flex {{border}}">
                    <figure class="text-ce">
                        <blockquote class="display-6 {{quotealign}}">
                            "Rebecca encouraged me to stay focused and motivated, even during challenging times. Her
                            belief in my potential came at a time when I couldn’t see it myself."
                            <figcaption class="blockquote-footer">
                                <br>– <strong>Angela Steele</strong>, Opportunities with Experience CIC
                            </figcaption>
                        </blockquote>
                    </figure>
                </div>
                <div class="col-12 col-lg-6 d-flex {{padding}}">
                    <img src="https://rluff.test/assets/brighton-wave-of-change.jpg" class="img-fluid">

                </div>
            </div>


           
         


            {% endfor %}
        </div>
    </div>
</section>

{% endblock %}