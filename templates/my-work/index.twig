{% block content %}
{% include('_partials/header-shallow')%}


<section class="py-5 d-flex bg-community">
    <div class="container">

        {% set entries = craft.entries.section('work').limit(null).all() %}
        {# {% for entry in entries %}
        {% if loop.index is even %}
        {% set oddclass = "even flex-sm-row-reverse" %}
        {% set quotealign = "text-start ps-5" %}
        {% set border = "border-5 border-start" %}
        {% set padding = "pe-lg-5" %}
        {% else %}
