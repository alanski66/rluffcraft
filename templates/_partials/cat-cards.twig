              <span class='d-flex-inline text-primary'>&nbsp;//&nbsp;</span>{{ category.title }}
            </h5>
            <p class="card-text">{{ category.categoryDescription |striptags|raw }}</p>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
